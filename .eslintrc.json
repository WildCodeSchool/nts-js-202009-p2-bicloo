{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": 0,
    "class-methods-use-this": "off",
    "no-alert": "off",
    "react/jsx-props-no-spreading": [
      2,
      {
        "exceptions": [
          "CardList",
          "BikesMap",
          "StationsList",
          "Slider",
          "ListSlider"
        ]
      }
    ]
  }
}
